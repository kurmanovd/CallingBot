<?xml version="1.0"?>
<config>
    <actions>
        <action type="accept"
            transport="tls"
            account="default"
            max_duration="260" hangup="250"
            play_dtmf="0123456789#*"
            play="voice_ref_files/reference_8000.wav"
            code="200" reason="OK"
            ring_duration="5"
            call_count="1"
            rtp_stats
        />
        <!-- wait for new calls until call_count is reached -->
        <action type="wait" ms="complete"/>
    </actions>
</config>
